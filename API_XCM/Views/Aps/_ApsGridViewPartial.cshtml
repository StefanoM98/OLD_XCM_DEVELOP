@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "ApsGridView";
        settings.CallbackRouteValues = new { Controller = "Aps", Action = "ApsGridViewPartial" };

        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Aps", Action = "ApsGridViewPartialUpdate" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditForm;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = false;
        settings.CommandColumn.ShowDeleteButton = false;
        settings.CommandColumn.ShowEditButton = true;

        settings.KeyFieldName = "DocumentID";

        settings.SettingsPager.Visible = true;
        settings.SettingsPager.PageSizeItemSettings.Visible = true;
        settings.SettingsPager.PageSizeItemSettings.Items = new string[] { "10", "20", "50" };
        settings.SettingsPager.PageSize = 20;

        settings.Settings.ShowGroupPanel = false;
        settings.Settings.ShowFilterRow = false;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.HideDataCells;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
        settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 0;


        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        settings.SettingsPopup.FilterControl.AutoUpdatePosition = false;


        settings.Columns.Add(c =>
        {
            c.FieldName = "RiferimentoCliente";
            c.Caption = "Rif. Cliente";
            c.AdaptivePriority = 0;
            c.EditFormSettings.Visible = DefaultBoolean.False;

        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "RiferimentoDafne";
            c.Caption = "Rif. Dafne";
            c.AdaptivePriority = 1;
            c.EditFormSettings.Visible = DefaultBoolean.False;

        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "PartNumber";
            c.Caption = "Codice Prodotto";
            c.AdaptivePriority = 2;
            c.EditFormSettings.Visible = DefaultBoolean.False;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "PartNumberDes";
            c.Caption = "Descrizione Prodotto";
            c.AdaptivePriority = 3;
            c.EditFormSettings.Visible = DefaultBoolean.False;

        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "Quantita";
            c.Caption = "Quantita";
            c.AdaptivePriority = 4;
            c.ShowInCustomizationForm = true;

            c.EditorProperties().SpinEdit(s =>
            {
                s.DisplayFormatString = "g";
                s.LargeIncrement = 1;
                s.MaxValue = 10000;
                s.MinValue = 1;
                s.ClearButton.DisplayMode = ClearButtonDisplayMode.Never;
                s.ClientSideEvents.Init = "function (s,e) { s.Focus(); }";
                s.ClientSideEvents.KeyPress = "function (s,e) {{ if(e.htmlEvent.keyCode == 13 || e.htmlEvent.keyCode == 9){ ApsGridView.UpdateEdit(); }}}";
            });
        });

    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()