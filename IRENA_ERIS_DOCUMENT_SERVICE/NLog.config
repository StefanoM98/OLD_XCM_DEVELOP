<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <!-- add your targets here -->
    
    <!--
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
    <target xsi:type="File" name="loggerCode" fileName="C:/IRENA_ERIS_DOCUMENT_SERVICE/LOG_DOCUMENTI_IRENA/LogDocumentiIRENA.log"
              layout="${longdate} ${uppercase:${level}} ${message}" archiveEvery="Day" maxArchiveFiles="90"/>
	  
    <target xsi:type="Console" name="console" layout="${longdate} ${uppercase:${level}} ${message}"/>

    <target name="Console" xsi:type="ColoredConsole" detectConsoleAvailable="true"  useDefaultRowHighlightingRules="false"
       layout="${time}|${callsite:className=false:filename=false:includeSourcePath=false:captureStackTrace=false} -> ${message}">
      <highlight-row condition="level == LogLevel.Trace" foregroundColor="Cyan" />
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Green" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Magenta" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White"/>
    </target>
  </targets>

  <rules>
    <!-- add your logging rules here -->
    
    <!--
    <logger name="*" minlevel="Trace" writeTo="f" />
    -->
    <logger name="loggerCode" minlevel="Info" writeTo="loggerCode" />
    <logger name="loggerCode" minlevel="Debug" writeTo="Console" />
  </rules>
</nlog>